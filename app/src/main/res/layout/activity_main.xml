<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="10dp"
        android:columnOrderPreserved="false">

        <!-- 20 Buttons -->
        <Button
            android:id="@+id/displayhelloworld"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Display Hello World"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/showhellobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Show Hello Button"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/displayname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Display Name"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Counter"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/simpleform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Simple Form"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/userage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="User Age"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/usergreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="User Greeting"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Calculator"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/textlength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Text Length"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/currencyconverter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Currency Converter"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/evenoddchecker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Even Odd Checker"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/wordreverser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Word Reverser"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/showdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Show Date"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/showusername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Show Username"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/multiplicationtable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Multiplication Table"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/simplelogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Simple Login"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/fahrenheittocelcius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Fahrenheit to Celsius"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/bookmarklist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Bookmark List"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/charactercounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Character Counter"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/palindromechecker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Palindrome Checker"
            android:ellipsize="end"
            android:maxLines="1" />

    </GridLayout>

</ScrollView>
